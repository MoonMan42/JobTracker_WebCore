@page
@model JobTracker.Pages.JobApplications.IndexModel
@{
    ViewData["Title"] = "Job List";
}

<h2>Job Applications</h2>


<div class="form-group">
    <a asp-page="./Edit" class="btn btn-primary">Add New</a>
</div>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="searchTerm">
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

@if (Model.Message != null)
{
    <div class="alert alert-info">
        @Model.Message
    </div>
}

<table class="table table-hover table-striped">
    <tr>
        <th>Job Title</th>
        <th>Date Applied</th>
        <th>Call Back</th>
    </tr>

    @foreach (var j in Model.jobs)
    {
        <tr>
            <td><a asp-page="./Edit" asp-route-jobId="@j.Id">@j.JobTitle </a></td>
            <td>@j.DateApplied</td>
            <td>@(j.CallBack? "Yes":"No")</td>
            <td>@(j.IsJobStillActive? "Yes":"No")</td>
        </tr>
    }
</table>



